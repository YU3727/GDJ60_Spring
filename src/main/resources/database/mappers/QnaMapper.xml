<?xml version="1.0" encoding="UTF-8"?>
<!-- Schema 추가 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="com.pooh.s1.board.qna.QnaDAO">
  
    <!-- 공통부분 -->
  	<sql id="NoticeCondition">
  		<where>
	  		<if test="kind=='title'">
	  			TITLE LIKE '%' || #{search} || '%'
	  		</if>
	  		<if test="kind=='contents'">
	  			CONTENTS LIKE '%' || #{search} || '%'
	  		</if>
	  		<if test="kind=='writer'">
	  			WRITER LIKE '%' || #{search} || '%'
	  		</if>
  		</where>
  	</sql>
  	
  	
  	<!-- totalCount -->
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(NUM) FROM QNA
  		<include refid="NoticeCondition"></include>
  	</select>
  
  	<!-- List -->
  	<select id="getBoardList" resultType="QnaDTO" parameterType="Pager">
  		SELECT * FROM
	  		(SELECT ROWNUM R, Q.* FROM
		  		(SELECT NUM, TITLE, WRITER, REGDATE, HIT FROM QNA
		  		<include refid="NoticeCondition"></include>
	  		ORDER BY NUM DESC) Q)
  		WHERE R BETWEEN #{startRow} AND #{lastRow}	
  	</select>
  
  </mapper>